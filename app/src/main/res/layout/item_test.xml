<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_et_brown_dialog">



    <TextView
        android:id="@+id/categorie_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_et_orange"
        android:fontFamily="@font/meta_pro_medium"
        android:text="Mavzu"
        android:padding="16dp"
        android:textColor="@color/orange"
        android:textColorHint="#E6B696"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/question_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/background_et_green"
        android:fontFamily="@font/meta_pro_medium"
        android:hint="Savol"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/green"
        android:textColorHint="#759C8C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categorie_et" />

    <EditText
        android:id="@+id/option1_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/background_et_brown"
        android:fontFamily="@font/meta_pro_medium"
        android:hint="#1 Variant (to'g'ri javob)"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/brown"
        android:textColorHint="#634835"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/option2_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_et"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/option2_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/background_et_brown"
        android:fontFamily="@font/meta_pro_medium"
        android:hint="#2 Variant"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/brown"
        android:textColorHint="#634835"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/option3_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1_et" />

    <EditText
        android:id="@+id/option3_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/background_et_brown"
        android:fontFamily="@font/meta_pro_medium"
        android:hint="#3 Variant"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/brown"
        android:textColorHint="#634835"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/option4_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2_et" />

    <EditText
        android:id="@+id/option4_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_et_brown"
        android:fontFamily="@font/meta_pro_medium"
        android:hint="#4 Variant"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/brown"
        android:textColorHint="#634835"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option3_et" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="24dp"
        android:background="@color/red"
        android:fontFamily="@font/meta_pro_medium"
        android:text="O'chirish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/option4_et"
        app:layout_constraintTop_toBottomOf="@id/option4_et" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginVertical="16dp"
        android:background="@color/orange"
        android:fontFamily="@font/meta_pro_medium"
        android:text="O'zgartirish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/option4_et"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delete_btn"
        app:layout_constraintTop_toBottomOf="@id/option4_et" />

</androidx.constraintlayout.widget.ConstraintLayout>